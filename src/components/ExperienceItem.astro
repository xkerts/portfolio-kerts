---
interface Props {
  title: string;
  description: string;
  date: string;
}
const { date, description, title } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-gray-200 dark:text-gray-500">{date}</time>
<h3 class="text-lg font-semibold text-blue-300 dark:text-white">{title}</h3>
<p class="mb-4 text-base font-normal text-gray-300 dark:text-gray-100 text-pretty">
  {description}
</p>
